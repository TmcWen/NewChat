<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/imageViewSelfBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#222222"
        />

    <ImageButton
        android:id="@+id/imageButtonSelfChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/icon_setting"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        />

    <LinearLayout
        android:id="@+id/linearLayoutHeadName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/imageViewSelfBackgroundImage"
        android:layout_marginTop="-40dp"

        >

        <ImageView
            android:id="@+id/imageViewSelfHeadImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#FF9800"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/textViewSelfName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是名字"
            android:layout_gravity="center"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewSelfUid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uid:111"
        android:textColor="#FF9800"
        android:layout_below="@+id/linearLayoutHeadName"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-15dp"
        />

    <TextView
        android:id="@+id/textViewSelfSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_sex"
        android:text="这里是性别"
        android:textColor="#FF9800"
        android:layout_below="@id/textViewSelfUid"
        android:gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/textViewSelfBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_cake"
        android:text="这里是生日"
        android:textColor="#FF9800"
        android:layout_below="@id/textViewSelfSex"
        android:gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/buttonSelfLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        android:textColor="@color/black"
        android:layout_below="@id/textViewSelfBirthday"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        />

</RelativeLayout>