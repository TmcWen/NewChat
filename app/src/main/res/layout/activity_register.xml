<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <EditText
            android:id="@+id/editTextRegisterInputEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:textColor="#FF9800"
            android:hint="邮箱"
            android:layout_weight="7"
            />

        <Button
            android:id="@+id/buttonRegisterCAPTCHA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:text="发送"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/editTextRegisterInputCAPTCHA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="#FF9800"
        android:hint="验证码"
        android:padding="20dp"
        />

    <EditText
        android:id="@+id/editTextRegisterInputPassword"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="#FF9800"
        android:hint="密码"
        />

    <EditText
        android:id="@+id/editTextRegisterInputPassword1"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="#FF9800"
        android:hint="确认密码"
        />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="注册"
        />

</LinearLayout>